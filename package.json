{
    "name":         "less-watcher",
    "description":  "A script that can watch a directory and recompile your .less scripts if they change.",
    "keywords":     ["less", "reload", "watch", "recompile", "css"],
    "author":       "amix",
    "version":      "1.1.3",
    "licenses": [{
        "type":       "MIT",
        "url":        "http://opensource.org/licenses/mit-license.php"
    }],

    "engines": {
        "node":            ">=0.2.0",
        "watcher_lib":     ">=1.1.0",
        "optimist":        ">=0.3.1",
        "docco":           ">=0.3.0"
    },

    "directories": {
        "lib" :       "./lib"
    },

    "main" :        "./lib/less-watcher.js",

    "bin": {
        "less-watcher":      "./bin/less-watcher"
    }

}
